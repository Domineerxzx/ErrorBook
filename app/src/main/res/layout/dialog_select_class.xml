<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="50dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="修改班级信息"
        android:textColor="@color/colorAppStyle"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_select_grade"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_title"
        android:gravity="center"
        android:text="选择年级"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@drawable/shape_user_button"/>
    <TextView
        android:layout_below="@id/tv_select_grade"
        android:id="@+id/tv_select_class"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="选择班级"
        android:textColor="#fff"
        android:background="@drawable/shape_alpha_card"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tv_close_select"
        android:gravity="center"
        android:text="我选好了"
        android:textSize="12dp"
        android:textColor="@color/colorLine"
        android:layout_below="@id/tv_select_class"
        android:layout_marginTop="10dp"/>
</RelativeLayout>